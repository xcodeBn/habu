<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="7dp"
    app:cardCornerRadius="13dp"
    android:padding="10dp"
    android:id="@+id/card"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bordo"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change password \n"
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                ></TextView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/oldpasslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                style="@style/TextLabel"
                app:errorEnabled="true"
                app:passwordToggleTint="@color/bordo">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentpassword"
                    android:layout_below="@+id/email_EditText"
                    android:hint="Enter your current password"
                    android:background="@color/transperent"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:maxLength="20"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newpasslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                style="@style/TextLabel"
                app:errorEnabled="true"
                app:passwordToggleTint="@color/bordo">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newpassword"
                    android:layout_below="@+id/email_EditText"
                    android:hint="Enter your new password"
                    android:background="@color/transperent"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:maxLength="20"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmpasslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                style="@style/TextLabel"
                app:errorEnabled="true"
                app:passwordToggleTint="@color/bordo">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirmnewpassword"
                    android:layout_below="@+id/email_EditText"
                    android:hint="Confirm new password"
                    android:background="@color/transperent"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:maxLength="20"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">


            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vfchangepass">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:id="@+id/submitbtn"
                    />

                <include layout="@layout/viewflipper_loading"
                    />

            </ViewFlipper>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Succes"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/bordo"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bordo"

            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="go back"
                android:textSize="20dp"
                android:background="@color/bordo"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/gobackbtn"
                android:layout_marginBottom="5dp"


                android:layout_centerInParent="true"
                app:tint="@color/bordo"/>

        </RelativeLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>