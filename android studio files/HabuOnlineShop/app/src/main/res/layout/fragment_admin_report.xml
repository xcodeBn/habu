<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperent"
    android:paddingBottom="?actionBarSize">


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/card"
            android:outlineSpotShadowColor="@color/darkbordo"
            android:layout_margin="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:theme="@style/producttv"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customers Reports"

                        android:textAlignment="center"
                        android:textSize="23dp"
                        android:textColor="@color/darkbordo"
                       />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customers reports about problems/troubles in the application."
                        android:textAlignment="center"
                       />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            >








                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"




                                android:id="@+id/rv"/>





                            <ViewFlipper
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <include layout="@layout/viewflipper_loading"/>
                                <include layout="@layout/error_layout"/>

                            </ViewFlipper>

                        </RelativeLayout>

                    </androidx.core.widget.NestedScrollView>
                </RelativeLayout>





            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </RelativeLayout>



</RelativeLayout>