<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/gradient_list"
    android:id="@+id/signuprelativelayout">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/applogo"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/logoveryverybig"

                android:outlineAmbientShadowColor="@color/white"
                />


<androidx.cardview.widget.CardView
    android:id="@+id/card2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/applogo"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="30dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="30dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            style="@style/TextLabel"
            app:errorEnabled="true"


            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:background="@color/transperent"
                android:lines="1"
                android:maxLength="26"
                android:inputType="text"




                ></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>









        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="20dp"
            style="@style/TextLabel"
            app:errorEnabled="true"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_EditText"
                android:layout_below="@+id/name_edittext"
                android:hint="Enter your email address"
                android:background="@color/transperent"

                android:inputType="text"
                android:lines="1"
                android:maxLength="36"



                ></com.google.android.material.textfield.TextInputEditText>




        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginTop="20dp"
            app:passwordToggleEnabled="true"
            style="@style/TextLabel"
            app:errorEnabled="true"
            app:passwordToggleTint="@color/bordo"

            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_EditText"
                android:layout_below="@+id/email_EditText"
                android:hint="Enter your password"
                android:background="@color/transperent"
                android:inputType="textPassword"

                android:lines="1"
                android:maxLength="20"

                ></com.google.android.material.textfield.TextInputEditText>




        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginTop="20dp"
            style="@style/TextLabel"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            app:passwordToggleTint="@color/bordo"

            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordverification_EditText"
                android:layout_below="@+id/email_EditText"
                android:hint="Confirm your password"
                android:background="@color/transperent"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="20"




                ></com.google.android.material.textfield.TextInputEditText>






        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text5"
            android:layout_marginTop="20dp"
            style="@style/TextLabel"
            android:layout_below="@id/text4"
            app:errorEnabled="true">



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transperent"
                android:hint="Location "
                android:id="@+id/location_EditText"

                android:inputType="text"
                ></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"


            >

            <ImageView
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/loginbck"/>

            <TextView
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/signup_btn"
                android:layout_centerInParent="true"
                android:text="Sign Up"
                style="@style/textviewstyle"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="18dp"/>
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/vf_signup">

                <include layout="@layout/viewflipper_loading"/>


            </ViewFlipper>

        </RelativeLayout>



    </RelativeLayout>



</androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>