<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="?actionBarSize"

    android:background="@color/transperent">











        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@drawable/scrollbarshape"
            android:keepScreenOn="true">

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center">






                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="100dp"
                        android:layout_height="70dp"

                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_baseline_card_travel_24"
                        app:tint="@color/bordo" />




                    <TextView
                        android:id="@+id/carttv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/cart"
                        android:textStyle="bold"
                        android:theme="@style/textviewstyle"
                       android:layout_marginTop="20dp"

                        android:text="Your Shopping Cart"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp">

                    <Button
                        android:id="@+id/orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Orders"
                        android:textSize="23dp"/>

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/vf_cart">


                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scrollbars="vertical"
                            android:scrollbarThumbVertical="@drawable/scrollbarshape"

                            >


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/cartrv"
                                android:visibility="visible"



                                />


                        </androidx.core.widget.NestedScrollView>
                        <include layout="@layout/error_layout"/>
                        <include layout="@layout/viewflipper_loading"/>
                        <include layout="@layout/cartempty"/>




                    </ViewFlipper>


                </RelativeLayout>





            </LinearLayout>


        </ScrollView>








</RelativeLayout>