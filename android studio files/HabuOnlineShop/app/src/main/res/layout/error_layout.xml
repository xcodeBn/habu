<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperent">

    <ImageView
        android:id="@+id/icon_error"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/text_error"
        android:src="@drawable/ic_baseline_error_24" />


    <TextView
        android:id="@+id/text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative_tryagain_btn_error"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:text="Something went wrong please \n               try again later"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/relative_tryagain_btn_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rectanglewhite" />

        <TextView
            android:id="@+id/tryagain_btn_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30dp"
            android:paddingTop="6dp"
            android:paddingRight="30dp"
            android:paddingBottom="6dp"
            android:text="Try Again"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ViewFlipper

            android:id="@+id/vf_loadTryAgain_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <include layout="@layout/viewflipper_loading" />


        </ViewFlipper>

    </RelativeLayout>





</RelativeLayout>