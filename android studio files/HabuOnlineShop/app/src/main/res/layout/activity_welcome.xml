<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/welcomeactivitylayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"

    android:background="@drawable/gradient_list">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/applogo"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logoveryverybig"
        ></ImageView>


    <TextView

        android:id="@+id/negligibletextview"
        android:layout_width="364dp"
        android:layout_height="wrap_content"

        android:layout_below="@id/applogo"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="20dp"




        android:text="Shopping never been \n easier!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"

        style="@style/textviewstyle"

        android:textSize="40dp"

        android:textStyle="bold">


    </TextView>


    <Button
        android:clickable="true"

        android:id="@+id/signin_btn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/signup_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5mm"
        android:background="@drawable/welcomeactivity_botton2"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:text="Already Have an account? login"
        android:textColor="@color/white"
        android:textSize="18dp"
        style="@style/welcomescreenbuttonstyle"


        android:textAllCaps="false">

    </Button>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="350dp"
        android:layout_height="60dp"



        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="528dp"
        android:background="@drawable/welcomeactivity_button1"
        android:padding="5dp"
        android:text="Sign Up Now For Free"
        android:textSize="17dp"
        android:textColor="@color/white"
        style="@style/welcomescreenbuttonstyle"


        android:textAllCaps="false">

    </Button>

</RelativeLayout>
    </ScrollView>
</RelativeLayout>