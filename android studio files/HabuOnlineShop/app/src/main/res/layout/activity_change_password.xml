<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword"
    android:id="@+id/parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/toolbar_back_logout"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/oldpasslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                style="@style/TextLabel"
                app:errorEnabled="true"
                app:passwordToggleTint="@color/bordo">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentpassword"
                    android:layout_below="@+id/email_EditText"
                    android:hint="Enter your current password"
                    android:background="@color/transperent"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:maxLength="20"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newpasslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                style="@style/TextLabel"
                app:errorEnabled="true"
                app:passwordToggleTint="@color/bordo">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newpassword"
                    android:layout_below="@+id/email_EditText"
                    android:hint="Enter your new password"
                    android:background="@color/transperent"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:maxLength="20"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmpasslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                style="@style/TextLabel"
                app:errorEnabled="true"
                app:passwordToggleTint="@color/bordo">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirmnewpassword"
                    android:layout_below="@+id/email_EditText"
                    android:hint="Confirm new password"
                    android:background="@color/transperent"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:maxLength="20"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">


            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vfchangepass">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="20dp"
                    android:theme="@style/textviewstyle"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:id="@+id/submitbtn"
                    />

                <include layout="@layout/viewflipper_loading"
                    />

            </ViewFlipper>


        </RelativeLayout>










    </LinearLayout>

</RelativeLayout>