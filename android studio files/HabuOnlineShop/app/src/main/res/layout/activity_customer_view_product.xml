<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerViewProduct"
    android:orientation="vertical"
    android:id="@+id/parent">



    <include layout="@layout/toolbar_back_logout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="500px"
                android:layout_height="500px"
                android:layout_centerInParent="true"
                android:id="@+id/productimage"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:clipToPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:padding="10dp"
                >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/producttv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:text="Name:"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/producttv"
                android:layout_alignParentEnd="true"
                android:text="ProductName"
                android:textAlignment="viewStart"
                android:id="@+id/name"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginTop="10dp"

                    android:background="@color/bordo" />


                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="Size:"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:theme="@style/producttv" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:text="ProductName"
                        android:theme="@style/producttv" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="Weight"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:theme="@style/producttv" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/producttv"
                        android:layout_alignParentEnd="true"
                        android:text="ProductName"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/weight"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/producttv"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:text="In Stock"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/producttv"
                        android:layout_alignParentEnd="true"
                        android:text="ProductName"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/stock"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginTop="10dp"

                    android:background="@color/bordo" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/producttv"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:text="Price:"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/producttv"
                        android:layout_alignParentEnd="true"
                        android:text="ProductName"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/price"
                        android:textColor="@color/darkgreen"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/vf_cart">


                        <Button

                            android:gravity="center"
                            android:id="@+id/cart_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add to Cart"
                            android:textSize="18dp" />

                        <include layout="@layout/viewflipper_loading"/>
                    </ViewFlipper>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buy_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:textSize="18dp" />

                </RelativeLayout>


            </LinearLayout>




        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:clipToPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customers reviews:"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:theme="@style/producttv"
                        android:textSize="23dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <Button
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add a Review"
                        android:id="@+id/review_btn"/>

                </RelativeLayout>

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vf_reviews"
                    android:layout_marginTop="20dp">

                    <include layout="@layout/viewflipper_loading"/>

                    <include layout="@layout/no_reviews"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            >
                            <TextView
                                android:layout_marginLeft="1dp"
                                android:layout_alignParentStart="true"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Very Good"

                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:theme="@style/producttv"
                                android:textSize="25dp"
                                android:textColor="@color/bordo"
                                android:id="@+id/tvreviewtitle"/>

                            <RatingBar

                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/tvreviewtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:numStars="5"

                                style="?android:attr/ratingBarStyleSmall"
                                android:isIndicator="true"
                                android:stepSize="0.1"
                                android:id="@+id/rate"


                                />

                            <include
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                layout="@layout/bar"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>





                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:id="@+id/reviewrv"/>

                            </androidx.core.widget.NestedScrollView>




                        </RelativeLayout>

                    </LinearLayout>

                    <include layout="@layout/error_layout"/>

                </ViewFlipper>

            </LinearLayout>
        </androidx.cardview.widget.CardView>









    </LinearLayout>

    </ScrollView>

</LinearLayout>